<view class='page'>
  <view class='page__hd'>
    <view class='page__title'>{{userName}}</view>
    <view class='page__desc'>
      <view class='weui-btn-area'>
        <picker bindchange='updateTerm' range='{{terms}}' value='{{termIndex}}' range-key='name'>
          <button type='default'>{{terms[termIndex].name}}</button>
        </picker>
      </view>
    </view>
  </view>

  <view class='page__bd'>
    <view class='weui-loadmore' wx:if='{{loading}}'>
      <view class='weui-loading'></view>
      <view class='weui-loadmore__tips'>正在加载</view>
    </view>

    <view class='weui-loadmore weui-loadmore_line' wx:if='{{courses == null}}'>
      <text class='weui-loadmore__tips'>暂无数据</text>
    </view>

    <view class='weui-panel weui-panel_access' wx:if='{{!loading && courses != null}}'>
      <view class='weui-panel__hd'>课程列表</view>
      <view class='weui-panel__bd'>
        <view class='weui-media-box weui-media-box_text' wx:for='{{courses}}' wx:key='id'>
          <view class='weui-media-box__title'>{{item.code}}</view>
          <view class='weui-media-box__desc'>{{item.title}}</view>
        </view>
      </view>
    </view>
  </view>

  <view class='page__ft'>
    <view class='weui-footer weui-footer_fixed-bottom'>
      <text class='weui-footer__text'>Copyright © 2018 YtMa</text>
    </view>
  </view>
</view>
