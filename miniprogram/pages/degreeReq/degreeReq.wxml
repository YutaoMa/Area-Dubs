<view class='page'>
  <view class='page__hd'>
    <view class='page__title'>{{title}}</view>
  </view>

  <view class='page__bd'>
    <view class='weui-loadmore' wx:if='{{loading}}'>
      <icon class='weui-loading' />
      <text class='weui-loadmore__tips'>正在加载</text>
    </view>

    <view class="weui-panel weui-panel_access" wx:for="{{content}}" wx:key="heading" wx:for-index="i">
      <view class="weui-panel__hd">{{item.heading}}</view>
      <view class="weui-panel__bd">
        <view class="weui-media-box weui-media-box_text" wx:for="{{content[i].requirements}}" wx:for-item="requirement" wx:key="info">
          <text class="weui-media-box__title">{{requirement.info}}</text>
          <text class="weui-media-box__desc">{{requirement.detail}}</text>
        </view>
      </view>
    </view>
  </view>

  <view class='page__ft'>
    <view class='weui-footer weui-footer_fixed-bottom'>
      <text class="weui-footer__text">Copyright © 2018 YtMa</text>
    </view>
  </view>
</view>
