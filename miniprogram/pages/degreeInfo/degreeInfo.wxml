<view class='page'>
  <view class='page__hd'>
    <view class='page__title'>{{title}}</view>
    <view class='page__desc'>{{desc}}</view>
  </view>

  <view class='page__bd'>
    <view class='weui-loadmore' wx:if='{{loading}}'>
      <view class='weui-loading'></view>
      <view class='weui-loadmore__tips'>正在加载</view>
    </view>

    <view class='weui-loadmore weui-loadmore_line' wx:if='{{degrees == null}}'>
      <text class='weui-loadmore__tips'>暂无数据</text>
    </view>

    <view class='weui-panel weui-panel_access'>
      <view class='weui-panel__hd'>Degree Options</view>
      <view class='weui-panel__bd'>
        <view class='weui-media-box weui-media-box_text' wx:for='{{degrees}}' wx:key='code' bindtap='getDegreeReq' data-code='{{item.auditCode}}' data-title='{{item.name}}'>
          <scroll-view scroll-x='true' class='weui-media-box__title'>{{item.name}}</scroll-view>
          <scroll-view scroll-x='true' class='weui-media-box__desc' wx:if='{{item.description != null}}'>{{item.description}}</scroll-view>
          <view class='weui-media-box__info'>
            <text class='weui-media-box__info__meta' wx:if='{{item.admissionType == "open"}}' style='color:green;'>{{item.admissionType}}</text>
            <text class='weui-media-box__info__meta' wx:elif='{{item.admissionType == "competitive"}}' style='color:purple;'>{{item.admissionType}}</text>
            <text class='weui-media-box__info__meta' wx:else>{{item.admissionType}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class='page__ft'>
    <view class='weui-footer weui-footer_fixed-bottom'>
      <text class="weui-footer__text">Copyright © 2018 YtMa</text>
    </view>
  </view>
</view>