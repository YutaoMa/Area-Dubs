<view class='page'>
  <view class='page__hd'>
    <view class='page__title'>{{date}}</view>
    <view class='page__desc'>{{day}}</view>
  </view>

  <view class='page__bd'>
    <view class='weui-loadmore' wx:if='{{loading}}'>
      <view class='weui-loading'></view>
      <view class='weui-loadmore__tips'>正在加载</view>
    </view>

    <view class='weui-loadmore weui-loadmore_line' wx:if='{{locations == null}}'>
      <text class='weui-loadmore__tips'>暂无数据</text>
    </view>

    <view class='weui-panel weui-panel_access' wx:if='{{!loading && locations != null}}'>
      <view class='weui-panel__hd'>Hours Today</view>
      <view class='weui-panel__bd'>
        <view class='weui-media-box weui-media-box_text' wx:for='{{locations}}' wx:key='lid'>
          <scroll-view scroll-x='true' class='weui-media-box__title'>{{item.name}}</scroll-view>
          <view class='weui-media-box__desc'>{{item.rendered}}</view>
          <view class='weui-media-box__info'>
            <text class='weui-media-box__info__meta' wx:if='{{item.times.currently_open}}' style='color:green;'>Open</text>
            <text class='weui-media-box__info__meta' wx:else>Closed</text>
            <text class='weui-media-box__info__meta_extra' wx:if='{{libList[item.name]}}' data-lid='{{libList[item.name]}}' data-title='{{item.name}}' bindtap='getAvailability'>Check Availability</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class='page__ft'>
    <view class='weui-footer weui-footer_fixed-bottom'>
      <text class="weui-footer__text">Copyright © 2018 YtMa</text>
    </view>
  </view>
</view>
